generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Post {
  id          BigInt   @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  title       String   @db.Text
  category    String   @db.Text
  description String   @db.Text
  publishedAt DateTime @db.Date
  isPublished Boolean?

  @@map("posts")
}
